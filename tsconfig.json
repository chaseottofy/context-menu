{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "/dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node",
    ],
  },
  "include": [
    "src/test/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}